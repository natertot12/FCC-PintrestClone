<!doctype html>
<html>
<head>
    <title>Pin !T</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" href="./css/main.css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="http://imagesloaded.desandro.com/imagesloaded.pkgd.js"></script>
  <script src="./javascript/post.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-left">
        <li><a href="/">Pin !T</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/">Recent</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/post">Post</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav><!-- navbar --->
  
  <form class="form-control text-center center-block" method="post" action="/post" enctype="multipart/form-data">
    <fieldset class="form-group">
      <p class="per80 text-center center-block">Image or Link an Image</p>
      <div class="alert alert-warning" id="tooBig">
        <p><strong>Too Big</strong> Please make sure the picture is less than 1000px</p>
      </div>
      <div class="alert alert-warning" id="tooSmall">
        <p><strong>Too Small</strong> Please make sure the picture is at least 300px</p>
      </div>
      <br>
      <input size="35" class="form-group text-center" type="text" name="link" id="link"/>
      <br>
      <div class="imgContainer">
        <img class="per80" id="myImg" src="#"/>
      </div>
      <input class="form-group btn btn-warning center-block item text-center" type="file" name="exact" id="file"/>
      <br>
    </fieldset>
    <fieldset class="form-group">
      <p>Title</p><p id="titleCount"></p>
      <input size="30" class="form-group" type="text" name="title" id="title" required/>
      <p>Description</p><p id="descriptionCount"></p>
      <textarea class="form-group" name="description" id="description"></textarea>
      <p>Tags (Please seperate with #'s)</p><p id="textCount"></p>
      <input type="text" id="tags" class="form-group" name="tags"/>
    </fieldset>
    <input type="submit" class="btn btn-secondary center-block" id="submit" value="Pin !T">
  </form>
  <br>
  <br>
    
    
</body>
</html>
